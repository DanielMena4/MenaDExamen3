<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MenaDExamen3"
             x:Class="MenaDExamen3.MainPage"
             Title="Daniel Mena 15/05/2004"
             >
    <ContentPage.BindingContext>
        <local:MainPageViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout>
            <Entry Text="{Binding Nombre}" Placeholder="Nombre del dispositivo"/>
            <Entry Text="{Binding Marca}" Placeholder="Marca del dispositivo"/>
            <Label Text="Garantia Activa" />
            <CheckBox IsChecked="{Binding GarantiaActiva}" />
            <Entry Text="{Binding VidaUtilMeses}" Placeholder="Vida util del dipositivo(Meses)"/>
            <Button Text="Agregar Dispositivo" Clicked="Button_Clicked_1"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
